<body>

    
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            

            <div class="col-md-9">

                <div class="thumbnail">
                    <%= image_tag(@product.image, class: 'img-responsive', size: "320x150") %>
                    <div class="caption-full">
                        <h4 class="pull-right"><%= number_to_currency(@product.price) %></h4>
                        <h4><a href="#"><%= @product.title %></a>
                        </h4>
